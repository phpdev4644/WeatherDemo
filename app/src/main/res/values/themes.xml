<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/backgroundColour</item>
        <item name="colorSecondaryVariant">@color/backgroundColour</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">@dimen/_1sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_15sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_15sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_15sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_15sdp</item>
        <item name="boxStrokeWidthFocused">@dimen/_1sdp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="hintTextAppearance">@style/hint</item>
    </style>

    <style name="hint" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="edittext">
        <item name="maxLines">1</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="button">
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="cornerRadius">@dimen/_15sdp</item>
    </style>

    <style name="dialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/backgroundColour</item>
    </style>

    <style name="custom_style_dialog_galley" parent="android:Theme.Holo.Dialog.NoActionBar">
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="android:layout_marginEnd">@dimen/_5sdp</item>
        <item name="android:windowBackground">#4d000000</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>


    <style name="labelBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="labelRegular">
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="buttonBorder">
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="cornerRadius">@dimen/_8sdp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

</resources>